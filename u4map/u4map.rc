		MENUITEM "Level &7\tctrl-7", ID_NAV_7
		MENUITEM "Level &8\tctrl-8", ID_NAV_8
		MENUITEM SEPARATOR
		MENUITEM "Room A\ta", ID_NAV_A
		MENUITEM "...", ID_NAV_NULL
		MENUITEM "Room P\tp", ID_NAV_P
		MENUITEM SEPARATOR
		MENUITEM "Reset to room A", ID_RESET_ROOM_A
	END
	POPUP "&Special squares"
	BEGIN
		MENUITEM "&Toggle Spoilers", ID_SPECIAL_SPOIL
		MENUITEM SEPARATOR
		MENUITEM "Show &Monsters", ID_SPECIAL_MONSTERS
		MENUITEM SEPARATOR
		MENUITEM "Show no &Party", ID_SPECIAL_PARTY_NONE
