		MENUITEM "Show &West party", ID_SPECIAL_PARTY_WEST
		MENUITEM "Show &Alt icons", ID_SPECIAL_ALT_ICONS
		MENUITEM SEPARATOR
		MENUITEM "&Reveal all secret paths", ID_SPECIAL_REVEAL_ALL_SECRET
		MENUITEM "&Hide all secret paths", ID_SPECIAL_HIDE_ALL_SECRET
		MENUITEM "Show 1st secret path", ID_SPECIAL_SHOW_1ST_SECRET
		MENUITEM "Show 2nd secret path", ID_SPECIAL_SHOW_2ND_SECRET
		MENUITEM "Show 3rd secret path", ID_SPECIAL_SHOW_3RD_SECRET
		MENUITEM "Show 4th secret path", ID_SPECIAL_SHOW_4TH_SECRET
	END
